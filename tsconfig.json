{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@public/*": ["public/*"],
      "@pages/*": ["pages/*"],
      "@icons/*": ["src/components/icons/*"],
      "@constant/*": ["src/constant/*"],
      "@lib/*": ["src/lib/*"],
      "@recoil/*": ["src/recoil/*"],
      "@type/*": ["src/type/*"],
      "@extType/*": ["src/extendedType/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/lib/db/cosmos/storedProcedure/bulkDelete.js", "node_modules/@types", "src/lib/api/__test__/api.test.ts", "src/lib/__test__/mongodb.test.ts"],
  "exclude": ["node_modules"],
}
